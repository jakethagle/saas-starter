{
  "name": "saas-starter",
  "private": true,
  "scripts": {
    "generate": "prisma generate",
    "prisma-studio": "prisma studio",
    "db-up": "docker compose up -d",
    "db-seed": "prisma db seed",
    "db-reset": "prisma migrate reset && pnpm migrate-dev",
    "dx:next": "run-s migrate-dev db-seed && next dev",
    "dx:prisma-studio": "pnpm prisma-studio",
    "dx": "run-p dx:* --print-label",
    "dev": "pnpm dx:next",
    "prebuild": "run-s generate migrate",
    "build": "next build",
    "start": "next start",
    "lint": "eslint --cache src",
    "lint-fix": "pnpm lint --fix",
    "migrate-dev": "prisma migrate dev",
    "migrate": "prisma migrate deploy",
    "test-unit": "vitest",
    "test-e2e": "playwright test",
    "test-start": "run-s test-unit test-e2e",
    "postinstall": "pnpm generate"
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  },
  "prettier": {
    "printWidth": 80,
    "trailingComma": "all",
    "singleQuote": true
  },
  "dependencies": {
    "@auth/prisma-adapter": "^2.7.4",
    "@headlessui/react": "^2.2.0",
    "@heroicons/react": "^2.1.5",
    "@hookform/resolvers": "^3.1.1",
    "@prisma/client": "^5.12.1",
    "@tanstack/react-query": "^5.59.15",
    "@trpc/client": "npm:@trpc/client@next",
    "@trpc/next": "npm:@trpc/next@next",
    "@trpc/react-query": "npm:@trpc/react-query@next",
    "@trpc/server": "npm:@trpc/server@next",
    "clsx": "^2.0.0",
    "framer-motion": "^11.11.15",
    "next": "^15.0.2",
    "next-auth": "5.0.0-beta.25",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-hook-form": "^7.45.2",
    "superjson": "^2.2.2",
    "zod": "^3.16.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.26.1",
    "@types/node": "^22.9.0",
    "@types/react": "^18.3.1",
    "autoprefixer": "^10.4.7",
    "dotenv": "^16.0.1",
    "eslint": "^9.13.0",
    "eslint-config-next": "^15.0.2",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-react-hooks": "^5.0.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.39",
    "prettier": "^3.3.3",
    "prisma": "^5.12.1",
    "start-server-and-test": "^1.12.0",
    "tailwindcss": "^3.4.6",
    "tsx": "^4.0.0",
    "typescript": "^5.6.2",
    "typescript-eslint": "^8.12.2",
    "vite": "^5.3.4",
    "vitest": "^2.0.4"
  },
  "publishConfig": {
    "access": "restricted"
  }
}